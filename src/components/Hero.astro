---
import { Image } from 'astro:assets';
import HeroImage from '../assets/top/hero.webp';
---

<section class="hero">
  <div class="hero-content">
   <div class="image-container">
     <Image src={HeroImage} alt="Students studying" />
   </div>
    <div class="text-content">
      <h1>Success<br>Academy</h1>
      <p>海外在住者向けオンライン学習塾</p>
      <a href="#signup" class="cta-button">Start Free Trial Today!</a>
    </div>
  </div>
</section>

<style>
  .hero {
    background-color: var(--secondary-peach);
    padding: 0;
    overflow: hidden;
  }

  .hero-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
  }

  .text-content {
    padding: 4rem;
  }

  h1 {
    color: var(--primary-navy);
    margin-bottom: 1rem;
    font-size: 3.5rem;
    font-weight: 900;
    line-height: 1.1;
  }

  p {
    color: var(--primary-navy);
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .cta-button {
    display: inline-block;
    background-color: var(--primary-orange);
    color: var(--white);
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: bold;
    transition: opacity 0.3s ease;
  }

  .cta-button:hover {
    opacity: 0.9;
  }

  .image-container {
    height: 100%;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
    }

    .text-content {
      padding: 2rem;
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
    }
  }
</style> 