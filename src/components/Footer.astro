<style>
    .footer {
        padding: 64px 0 32px;
        background-color: var(--white, #FFFFFF);
        border-top: 1px solid var(--border-color, #E2E8F0);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 16px;
    }

    .footer-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 64px;
        margin-bottom: 64px;
    }

    .logo h2 {
        font-size: 24px;
        font-weight: bold;
        color: var(--primary-navy, #0A2342);
        line-height: 1.2;
    }

    .subscribe h3 {
        font-size: 24px;
        font-weight: bold;
        color: var(--primary-navy, #0A2342);
        margin-bottom: 8px;
    }

    .subscribe p {
        color: var(--black, #4A5568);
        margin-bottom: 16px;
    }

    .subscribe-form {
        display: flex;
        gap: 16px;
        margin-bottom: 8px;
    }

    .subscribe-form input {
        flex: 1;
        padding: 12px 16px;
        border: 1px solid var(--border-color, #E2E8F0);
        border-radius: 4px;
        font-size: 16px;
    }

    .subscribe-form button {
        background-color: var(--primary-orange, #E86A33);
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .subscribe-form button:hover {
        background-color: #d55f2d;
    }

    .terms {
        font-size: 14px;
        color: var(--black, #4A5568);
    }

    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 32px;
        border-top: 1px solid var(--border-color, #E2E8F0);
    }

    .footer-bottom p {
        color: var(--black, #4A5568);
    }

    .social-links {
        display: flex;
        gap: 16px;
    }

    .social-links a {
        color: var(--black, #4A5568);
        transition: color 0.3s ease;
    }

    .social-links a:hover {
        color: var(--primary-navy, #0A2342);
    }

    @media (max-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr;
            gap: 32px;
        }

        .subscribe-form {
            flex-direction: column;
        }

        .footer-bottom {
            flex-direction: column;
            text-align: center;
            gap: 16px;
        }
    }
</style> 