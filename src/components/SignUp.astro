---
import { Image } from "astro:assets";
import SignUpImage from "../assets/top/signup.webp";
---

<section class="signup">
  <Image
    src={SignUpImage}
    alt="Workspace with computer and coffee"
    class="background-image"
  />
  <div class="overlay">
    <div class="container">
      <div class="signup-content">
        <h2>Sign Up Now</h2>
        <p class="subtitle">今すぐ始める</p>

        <div class="signup-options">
          <div class="divider">
            <span>or</span>
          </div>

          <form class="email-form">
            <input type="email" placeholder="Your email" required />
            <button type="submit" class="submit-button">
              Continue with Email
            </button>
          </form>

          <a href="#" class="login-link">会員ログイン</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .signup {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 16px;
    width: 100%;
  }

  .signup-content {
    max-width: 480px;
    margin: 0 auto;
    text-align: center;
    background: white;
    padding: 48px;
    border-radius: 16px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  h2 {
    font-size: 40px;
    font-weight: bold;
    color: var(--primary-navy, #0a2342);
    margin-bottom: 8px;
  }

  .subtitle {
    font-size: 20px;
    color: var(--black, #4a5568);
    margin-bottom: 32px;
  }

  .signup-options {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .google-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    width: 100%;
    padding: 12px;
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: 8px;
    background: white;
    color: var(--black, #4a5568);
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .google-button:hover {
    background-color: #f8f9fa;
  }

  .divider {
    position: relative;
    text-align: center;
    margin: 16px 0;
  }

  .divider::before,
  .divider::after {
    content: "";
    position: absolute;
    top: 50%;
    width: 45%;
    height: 1px;
    background-color: var(--border-color, #e2e8f0);
  }

  .divider::before {
    left: 0;
  }

  .divider::after {
    right: 0;
  }

  .divider span {
    background-color: white;
    padding: 0 16px;
    color: var(--black, #4a5568);
    font-size: 14px;
  }

  .email-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .email-form input {
    padding: 12px 16px;
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: 8px;
    font-size: 16px;
  }

  .submit-button {
    background-color: var(--primary-orange, #e86a33);
    color: white;
    padding: 12px;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .submit-button:hover {
    background-color: #d55f2d;
  }

  .login-link {
    color: var(--primary-navy, #0a2342);
    text-decoration: underline;
    font-size: 14px;
    transition: color 0.3s ease;
  }

  .login-link:hover {
    color: var(--primary-orange, #e86a33);
  }

  @media (max-width: 640px) {
    .signup-content {
      padding: 32px;
    }

    h2 {
      font-size: 32px;
    }
  }
</style>

